@model MyUniversityProject.Models.FilterModel.ReserveFilterViewModel


<div class="wrapper-reserv">
    <div class="wrapped-div-2">
        <div class="col-md-12 offset-md-0">
            @using (Html.BeginForm("ReservationHistory", "MyOffice", FormMethod.Get, new { @class = "mt-4" }))
            {
            <ul class="list-group">
                <li class="list-group-item bg-dark d-flex justify-content-center">
                    <div class="form-group">
                        <div class="input-group">
                            @Html.TextBox("searching")
                            <div class="input-group-append">
                                <input class="btn btn-primary" type="submit" value="Find">
                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item bg-dark d-flex justify-content-center">
                    <div class="form-group">
                        @Html.Label("", "Order by:", htmlAttributes: new { @class = "control-label  text-white" })
                        @Html.DropDownListFor(x => x.SortItem, Model.SortList, new { @class = "form-control", @style = "width: auto", @Value = Model.SortItem })
                    </div>
                </li>
                <li class="list-group-item bg-dark">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.Label("", "From:", htmlAttributes: new { @class = "control-label text-white" })
                                @Html.TextBoxFor(x => x.MinPrice, new { @class = "form-control", @type="number", @min="0" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.Label("", "To:", htmlAttributes: new { @class = "control-label text-white" })
                                @Html.TextBoxFor(x => x.MaxPrice, new { @class = "form-control", @type="number", @min="0" })
                            </div>
                        </div>
                    </div>
                </li>
                <li class="list-group-item list-group-item-success text-center p-3">
                    @Html.Label("", "Date", htmlAttributes: new { @class = "control-label" })
                </li>
                <li class="list-group-item bg-dark">
                    <div class="form-group">
                        @Html.Label("", "From:", htmlAttributes: new { @class = "control-label  text-white" })
                        @Html.TextBoxFor(x => x.FirstDate, new { @class = "form-control", @type = "datetime-local" })
                    </div>
                    <div class="form-group">
                        @Html.Label("", "To:", htmlAttributes: new { @class = "control-label  text-white" })
                        @Html.TextBoxFor(x => x.SecondDate, new { @class = "form-control", type = "datetime-local" })
                    </div>
                </li>
                <li class="list-group-item">
                    <input type="submit" class="btn btn-outline-primary" value="Apply" />
                </li>
            </ul>
            }

        </div>
    </div>
</div>
    
